  insert into T_PERSON (P_ID, P_CODE, P_NAME, P_CARD, P_SEX,P_BIRTH,P_EMAIL,P_NATIONAL,P_ADDRESS,P_TEL,P_PHONE,P_IMG,P_ENAME,P_LOGINNAME,P_PASSWORD,STATE,ORG_ID)
    values (
    	#{javaUUID,jdbcType=VARCHAR},
